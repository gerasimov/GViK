{
    "author": "Gerasimov Ruslan",
    "background": {
        "persistent": true,
        "scripts": [
            "engine/migrate.js",
            "engine/core.js",
            "engine/api/support.js",
            "engine/api/methods.js",
            "engine/api/port.bg.js",
            "system/background.js"
        ]
    },
    "content_scripts": [ {
        "css": [
            "font/gvik.css",
            "system/contentStyle.css"
        ],
        "js": [
            "engine/migrate.js",
            "engine/core.js",
            "engine/dom.js",
            "engine/api/support.js",
            "engine/api/methods.js",
            "system/contentScript.js",
            "engine/api/port.content.js"
        ],
        "matches": [
            "*://vk.com/*"
        ],
        "run_at": "document_start"
    } ],
    "content_security_policy": "script-src 'self' https://www.google-analytics.com https://ssl.google-analytics.com;  img-src *; object-src 'self'",
    "default_locale": "ru",
    "description": "__MSG_extDescription__",
    "icons": {
        "128": "icon128.png",
        "16": "icon16.png",
        "48": "icon48.png"
    },
    "manifest_version": 2,
    "name": "GViK",
    "options_page": "newoptions/index.html",
    "page_action": {
        "default_icon": "img/Settings.png",
        "default_popup": "newoptions/index.html",
        "default_title": "__MSG_actTitle__"
    },
    "permissions": [
        "tabs",
        "downloads",
        "storage",
        "*://*.vk.com/*",
        "*://*.vk-cdn.net/*",
        "*://*.audioscrobbler.com/*",
        "*://*.vk.me/*"
    ],
    "version": "1.0.7.2",
    "web_accessible_resources": [
        "js/init.js",

        "engine/core.js",
        "engine/dom.js",
        "engine/events.js",
        "engine/storage.js",
        "engine/configs.js",


        "engine/api/chrome.js",

        "js/lib/mousetrap.js",
        "js/lib/md5.js",

        "js/vkinit.js",


        "js/plugin/lastfm/api.js",
        "js/plugin/lastfm/scrobbler.js",

        "js/plugin/vkapi/vkapi.js",
        "js/plugin/vkapi/search.js",

        "js/plugin/launcher/launcher.js",
        "js/plugin/launcher/commands.js",
        "js/plugin/launcher/audio.js",

        "js/plugin/sidebar/sidebar.js",
        "js/plugin/sidebar/friends.js",
        "js/plugin/sidebar/lastfm.js",

        "js/plugin/audio/download.js",
        "js/plugin/audio/bitrate.js",

        "js/common.js",

        "manifest.json",
        "configs.json",

        "img/darr.gif",
        "img/loader.gif",
        "img/progress.gif",
        "img/album.png",
        "img/misc.png",
        "img/sprite.png",
        "img/playBtn.png",
        "img/remove.gif"
    ]
}